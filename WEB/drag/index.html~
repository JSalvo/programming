    $("#buttonControllo").click(function(){
	var alfabetoMaiuscolo = "ABCDEFGHILMOPQRSTUVZ";
	var alfabetoMinuscolo = "abcdefghilmnopqrstuvz";
	
	for (i=0; i<21; i++)
	{
		var og = $("#"+alfabetoMinuscolo[i]).offset();
		var r1 = $("#divRisposte"+alfabetoMaiuscolo[i]).offset();
		
		if (i != 20)
		{
			var r2 = $("#divRisposte"+alfabetoMaiuscolo[i+1]).offset();
		
		
			if ((og.top>=r1.top) && (og.top<=r2.top))
				$("#divFaccineRisposte"+alfabetoMaiuscolo[i]).animate({opacity: '1'});
		}
		else
		{
			if (og.top>=r1.top)
				$("#divFaccineRisposte"+alfabetoMaiuscolo[i]).animate({opacity: '1'});
				
		}
        }
		

	

